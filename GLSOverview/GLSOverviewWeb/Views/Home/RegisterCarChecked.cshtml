@model GLSOverviewWeb.Viewmodels.RegistrationModel

@{
    ViewBag.Title = "RegisterCarChecked";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>RegisterCarChecked</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Car: @Model.Car.Licenseplate</h4>
        <h4>Employee: @Model.Employee.Name</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Anything particular - hinges on the trunk door?")
            <div class="col-md-10">
                @Html.LabelFor(model => model.Comment, htmlAttributes: new { @for= "comment" })
                @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", @rows = "5", @id = "comment" })
                @Html.ValidationMessageFor(model => model.Comment, "", new {@class = "text-danger"})
            </div>
        </div>

        
            
                <br/>
            <ul>
                @foreach (string checkpoint in Model.CheckList) {
                    <li>@checkpoint</li>
                }
            </ul>

            <br/>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input class="checkbox" type="checkbox" onclick="EnableSubmit(this)"> Car @Model.Car.Licenseplate is empty and placed at port + <strong>@Model.Car.PortNo</strong>
                </label>
            </div>
            <br />
            <input id="confirm" type="submit" value="Confirm" disabled="true" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to homesite", "Index")
</div>


<script>
    EnableSubmit = function (val) {
        var sbmt = document.getElementById("confirm");

        if (val.checked == true) {
            sbmt.disabled = false;
        }
        else {
            sbmt.disabled = true;
        }
    }
</script>