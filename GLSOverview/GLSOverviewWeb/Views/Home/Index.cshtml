@model GLSOverviewWeb.Viewmodels.RegistrationModel

@using GLSOverviewWeb.Controllers

@{
    ViewBag.Title = "Overview";
}

<h2>Overview</h2>

@if (LoginController.IsLoggedIn())
{
    using (Html.BeginForm("IndexArchive", "Home", FormMethod.Get))
    {
        <div class="form-group ">
            <span class="label label-info">
                @Html.LabelFor(m => m.ShowDate, new {@class = "label control-label"})
            </span>
            <div class="input-group ">
                @Html.EditorFor(m => m.ShowDate,
                    new { htmlAttributes = new { @class = "form-control datepicker", @placeholder = "Click to pick a date" } }
                    )
                <span class="input-group-btn"><input type="submit" value="View" class="btn btn-default" /></span>

            </div>
        </div>
    }
}

<h3><span class="label label-success">Arrived<img src="~/Content/home.png" /></span></h3>

<div class="input-group">
    <span class="input-group-addon">Filter</span>
    <input id="filter" type="text" class="form-control" placeholder="Type here...">
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Licenseplate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hauler)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RouteNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.Position)
            </th>
        </tr>
    </thead>
    <tbody class="searchable">
        @foreach (var item in Model.Cars)
        {
            if (item.Status == (int)StatusTypes.Arrived)
            {
                <tr class="clickable" onclick="document.location = '@Url.Action("employeesLogin", new {CarID = item.Id})'">
                    <td>
                        <h4> @Html.DisplayFor(modelItem => item.Licenseplate)</h4>
                    </td>
                    <td>
                        <h4> @Html.DisplayFor(modelitem => item.Hauler) </h4>
                    </td>
                    <td>
                        <h4> @Html.DisplayFor(modelItem => item.RouteNo)</h4>
                    </td>
                    <td>
                        <h4> @Html.DisplayFor(modelItem => item.Position)</h4>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
