<br/>
<br/>
<br />
@if (Model.RegistrationList.Count() > 0) {
<h4><span class="label label-warning">List of Registrations with notifications</span></h4>
    <table>
           
        @foreach (var reg in Model.RegistrationList) {
            <tr>
                <th><h4>@Html.DisplayFor(modelItem => reg.car.RouteNo) - @Html.DisplayFor(modelItem => reg.car.Licenseplate)</h4></th>
            </tr>
            <tr>
                <td>Parked at @reg.Position</td>
            </tr>
            <tr>
                <td><p>@Html.DisplayFor(modelItem => reg.Comment)</p></td>
            </tr>
            <tr>
                <td><small>Registered by <strong>@reg.employee.Name</strong> on @reg.Date</small></td>
            </tr>
            <tr>
                <td><strong>@using (Html.BeginForm("RegistrationChecked", "Admin", new { id = reg.Id })) {
                    <input type="submit" value="OK!" />
                }</strong></td>
            </tr>
        }

    </table>
  }
else {
    <h4><span class="label label-success">No registrations to handle</span></h4>
}