@model IEnumerable<GLSOverviewWeb.Models.employee>

@{
    ViewBag.Title = "Manage Employees";
}

<h2>Manage Employees</h2>
<hr />

<input type="button" class="btn btn-default" value="Back to Administration" onclick="location.href='@Url.Action("Index", "Admin")'" />
<input type="button" class="btn btn-primary active" value="Create New Employee" onclick="location.href='@Url.Action("Create", "AdminEmployees")'" />

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.EmpNo)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>Action</th>
        </tr>
    </thead>

    @foreach (var emp in Model)
    {
        <tr>
            <td>@emp.EmpNo</td>
            <td>@emp.Name</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = emp.Id }, new { @class = "btn btn-primary active btn-xs" })
                @Html.ActionLink("Delete", "Delete", new { id = emp.Id }, new { @class = "btn btn-danger active btn-xs" })
            </td>
        </tr>
    }
</table>
