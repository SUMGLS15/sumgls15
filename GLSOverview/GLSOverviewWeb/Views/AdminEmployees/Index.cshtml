@model IEnumerable<GLSOverviewWeb.Models.employee>

@{
    ViewBag.Title = "Administrate employees";
}

<h2>Administrate employees</h2>
<a>
    <input class="btn btn-primary active" type="button" value="New Employee" onclick="location.href='@Url.Action("Add", "AdminEmployees")'" />
    </ />
</a>
<br />
<div>
    <table class="table table-striped">
        <tr>
            <th>Employee Number:</th>
            <th>Name: </th>
            <th>Actions: </th>
        </tr>

        @foreach (var emp in Model)
        {
            <tr class="clickable">
                <td>@emp.EmpNo</td>
                <td>@emp.Name</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = emp.Id }, new { @class = "btn btn-info btn-xs" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = emp.Id }, new { @class = "btn btn-info btn-xs" })
                </td>
            </tr>
        }
    </table>
</div>
