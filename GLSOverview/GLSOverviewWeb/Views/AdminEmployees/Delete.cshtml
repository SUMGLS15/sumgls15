@model GLSOverviewWeb.Models.employee

@{
    ViewBag.Title = "Delete Employee";
}

<h2>Delete Employee <small>- @Model.Name</small></h2>
<hr />

Are you sure you want to permanently delete this employee?
<p />

<dl class="dl-horizontal">
    <dt>@Html.DisplayNameFor(model => model.EmpNo)</dt>
    <dd>@Html.DisplayFor(model => model.EmpNo)</dd>

    <dt>@Html.DisplayNameFor(model => model.Name)</dt>
    <dd>@Html.DisplayFor(model => model.Name)</dd>

    <dt>@Html.DisplayNameFor(model => model.Password)</dt>
    <dd>@Html.DisplayFor(model => model.Password)</dd>

    <dt>@Html.DisplayNameFor(model => model.Admin)</dt>
    <dd>@Html.DisplayFor(model => model.Admin)</dd>
</dl>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="col-md-11 col-md-offset-1">
        <input type="button" class="btn btn-default" value="Cancel" onclick="location.href='@Url.Action("Index", "AdminEmployees")'" />
        <input type="submit" class="btn btn-danger active" value="Delete Employee" />
    </div>
}
